<% include ../partials/header %>

<div class= "jumbotron">
  <h1>Santa's Savors</h1>
  <div class= "link">
    <a href = "/children/new">Add Your Child</a>
  </div>
</div>

<p>Click On A Name For More Information</p>

<table id="searchDataTable" class= "table table-striped table-hover display">
<thead id= "underline">
	<tr>
		<th>Name</th>
		<th>Age</th>
		<th>Needs</th>
		<th>Interests</th>
    <th>Clothing Size</th>
    <th>Shoe Size</th>
    <th>Site</th>
		<th>Santa</th>
	</tr>
</tfoot>
<tfoot>
  <tr>
    <th>Name</th>
    <th>Age</th>
    <th>Needs</th>
    <th>Interests</th>
    <th>Size</th>
    <th>Shoe Size</th>
    <th>Site</th>
    <th>Santa</th>
  </tr>
</thead>
<tbody>
<% children.forEach(function(child){ %>
  <tr>
    <td><a href="/children/<%= child.id%>/" class= "btn btn-dark"><%= child.name%></a></td>
  	<td><%= child.age %></td>
  	<td><%= child.needs %></td>
  	<td><%= child.interests %></td>
    <td><%= child.clothing %></td>
    <td><%= child.shoe %></td>
  	<td><%= child.site %></td>
  	<td><%= child.santa %></td>
  </tr>

<% })%>

</tbody>
</table>
<p>Find Your Nearest Site Location Below</p>
<br>

<div id = "map-canvas"></div>
<% include ../partials/footer %>
<br>
<form action="/logout">
    <input type="submit" value="Logout" class="btn btn-gold btn-m">
</form>
