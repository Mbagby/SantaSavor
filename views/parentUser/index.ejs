<% include ../partials/header %>
<h1>Santa Savors</h1>
<a href = "/children/new">Add a Child</a>
<table class= "table table-striped table-hover">
<thead>
	<tr>
		<th>Name</th>
		<th>Age</th>
		<th>Needs</th>
		<th>Interests</th>
		<th>Site</th>
		<th>Santa</th>
	</tr>
</thead>

<tbody>
<% children.forEach(function(child){ %>
  <tr>
    <td><a href="/children/<%= child.id%>/" class= "btn btn-primary-xs"><%= child.name%></a></td>
  	<td><%= child.age %></td>
  	<td><%= child.needs %></td>
  	<td><%= child.interests %></td>
  	<td><%= child.site %></td>
  	<td><%= child.santa %></td>
  </tr>

<% })%>

</tbody>
</table>
<% include ../partials/footer %>
<br>
<form action="/logout">
    <input type="submit" value="Logout" class="btn btn-primary btn-xs">
</form>
