<% include ../partials/header %>

<div class= "jumbotron">
  <h1>Add Your Child</h1>
  <h1 id= "shiftLeft">To Santa's List</h1>
  <div class= "link">
    <a href = "/children">See All Children</a>
  </div>
</div>

<form action = "/children" method="POST">
  <div class="form-group">
    <label for="name"> First Name: </label>
    <input type="text" class="form-control" name="child[name]" id="name" autofocus>
  </div>
  <div class="form-group">
    <label for="age"> Age: </label>
    <input type="text" class="form-control" name="child[age]" id="age" autofocus>
  </div>
  <div class="form-group">
    <label for="clothing"> Clothing Size: </label>
    <input type="text" class="form-control" name="child[clothing]" id="clothing" autofocus>
  </div>
  <div class="form-group">
    <label for="shoe"> Shoe Size: </label>
    <input type="text" class="form-control" name="child[shoe]" id="shoe" autofocus>
  </div>
  <div class="form-group">
    <label for="needs"> Needs: </label>
    <input type="text" class="form-control" name="child[needs]" id="needs" autofocus>
  </div>
  <div class="form-group">
    <label for="interests"> Interests: </label>
    <input type="text" class="form-control" name="child[interests]" id="interests" autofocus>
  </div>
  <div class="form-group">
    <label for="site"> DropOff Site: </label>
    <select class = "form-control" name="child[site]" id="site" autofocus>
      <option value="Mission Education Center ">Mission Education Center </option>
      <option value="Kern Country Community School">Kern Country Community School</option>
      <option value="San Joaquin Elementary School ">San Joaquin Elementary School </option>
      <option value="Coliseum Elementary School">Coliseum Elementary School</option>
      <option value="Loleta Grammar School ">Loleta Grammar School </option>
      <option value="Nystrom Elementary">Nystrom Elementary</option>
      <option value="Rise Elementary">Rise Elementary</option>
      <option value="East Palo Alto Charter School">East Palo Alto Charter School</option>
      <option value="Indian Valley Elementary">Indian Valley Elementary</option>
      <option value="Rosa Parks Elementary">Rosa Parks Elementary</option>
      <option value="Prairie Elementary">Prairie Elementary</option>
    </select>
  </div>
<input type="submit" value="Add" class="btn btn-lg btn-green">
</form>


<% include ../partials/footer %>
<br>

<form action="/logout">
    <input type="submit" value="Logout" class="btn btn-gold btn-m">
</form>