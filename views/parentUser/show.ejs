<% include ../partials/header %>
<h1 class= "jumbotron">Learn About <%= child.name%></h1>
<a href= "/children"> See all children </a>

<table class= "table table-striped table-hover">
<thead>
  <tr>
    <th>Name</th>
    <th>Age</th>
    <th>Needs</th>
    <th>Interests</th>
    <th>Drop off Site</th>
    <th>Santa</th>
  </tr>
</thead>
  <tr>
    <td><%= child.name%></td>
    <td><%= child.age %></td>
    <td><%= child.needs %></td>
    <td><%= child.interests %></td>
    <td><%= child.site %></td>
    <td><%= child.santa %></td>
    <td class = "edit"><a href="/children/<%= child.id%>/edit" class="btn btn-danger btn-xs">Edit</a></td>
    <td class= "delete"><form action="/children/<%= child.id %>?_method=delete" method= "POST"><input type="submit" value="Delete" class="btn btn-danger btn-xs"></form></td>
  </tr>
</table>

<% include ../partials/footer %>
<br>

<form action="/logout">
    <input type="submit" value="Logout" class="btn btn-primary btn-xs">
</form>