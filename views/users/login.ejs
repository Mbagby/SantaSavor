<% include ../partials/header %>

<div class= "jumbotron">
  <h1>Welcome To Santa's Savors</h1>
  <div class= "link">
    <a href="/signup">Don't have an account? Sign up here</a>
  </div>
</div>

<div id="login">
	<h1>Login</h1>
</div>

<form method="POST" action="/login" >
  <div class="form-group">
    <label for="email"> Email:     </label>
      <input type="text" id="email" name="user[email]" class="form-control" autofocus>
  </div>
  <div class="form-group">
    <label for="pass"> Password:</label>
      <input type="password" id="pass" name="user[password]" class="form-control">
  </div>
  <input type="submit" value="Login" class="btn btn-gold">
</form>

