<% include ../partials/header %>

<div id="signuplogin" class= "jumbotron">
  <h1>Welcome To Santa's Savors</h1>
  <div class= "link">
    <a href="/login">Already have an account? Login here</a>
  </div>
</div>

<div id="signup">
  <h1>Signup</h1>
</div>

<button id= "parentButton" class= "btn-primary btn- xs"> Parent </button>
<button id= "santaButton" class= "btn-primary btn- xs"> Santa </button>
<p>Are you a Parent or a Santa:  </p>
<form method="POST" action="/signup" >
  <div class="form-group">
    <label for="userType"></label>
      <input id= "userType" type="text" name="user[userType]" class="form-control" autofocus>
  </div>
  <div class="form-group">
    <label for="user">Email:    </label>
      <input type="text" id="email" name="user[email]" class="form-control" autofocus>
  </div>
  <div class="form-group">
    <label> Password: </label>
      <input type="password" id="pass" name="user[password]" class="form-control">
  </div>
  <div class="form-group">
    <input type="submit" value="Sign up" class="btn btn-primary">
  </div>
</form>

<% include ../partials/footer %>