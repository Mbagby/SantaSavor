<% include ../partials/header %>

<div class= "jumbotron">
  <h1>Santa's Savors</h1>
</div>

<p>Click On A Name For More Information</p>


<table id= "searchDataTable" class= "table table-striped table-hover">
<thead>
	<tr>
		<th>Name</th>
		<th>Age</th>
		<th>Needs</th>
		<th>Interests</th>
		<th>Site</th>
		<th>Santa</th>
    <th>Sponser A Child</th>
	</tr>
</thead>


<tbody>
<% children.forEach(function(child){ %>
  <tr>
    <td><a href="/children/<%= child.id%>/" class= "btn btn-dark" ><%= child.name%></a></td>
  	<td><%= child.age %></td>
  	<td><%= child.needs %></td>
  	<td><%= child.interests %></td>
  	<td><%= child.site %></td>
  	<td><%= child.santa %></td>
    <td id= "gold"><a href="/children/<%= child.id%>/" class= "btn btn-gold btn-xs">Choose Me!</a></td>
  </tr>

<% })%>

</tbody>
</table>
<br>
<p>Find Your Nearest Site Location Below</p>
<br>

<div id = "map-canvas"></div>
<% include ../partials/footer %>
<br>
<form action="/logout">
    <input type="submit" value="Logout" class="btn btn-gold btn-m">
</form>

