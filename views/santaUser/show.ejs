<% include ../partials/header %>
<div class= "jumbotron">
  <h1>Learn About <%= child.name%></h1>
  <div class= "link">
    <a href= "/children"> See all children </a>
  </div>
</div>

<table class= "table table-striped table-hover">
<thead>
  <tr>
    <th>Name</th>
    <th>Age</th>
    <th>Needs</th>
    <th>Interests</th>
    <th>Drop off Site</th>
    <th>Santa</th>
    <th>Not Assigned</th>
  </tr>
</thead>
  <tr>
    <td><%= child.name%></td>
    <td><%= child.age %></td>
    <td><%= child.needs %></td>
    <td><%= child.interests %></td>
    <td><%= child.site %></td>
    <td><%= child.santa %></td>
    <td><a href= "/children/<%= child.id%>/edit" class= "btn btn-primary btn-xs"> Choose <%= child.name%></a></td>
  </tr>
</table>

<% include ../partials/footer %>
<br>

<form action="/logout">
    <input type="submit" value="Logout" class="btn btn-primary btn-xs">
</form>