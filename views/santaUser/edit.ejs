<% include ../partials/header %>

<div class= "jumbotron">
  <h1>Volunteer to be</h1>
  <h1 id= "shiftLeft"><%= child.name%>'s Santa</h1>
  <div class= "link">
    <a href = "/children">See All Children</a>
  </div>
</div>

<table class= "table table-striped table-hover">
<thead>
  <tr>
    <th>Name</th>
    <th>Age</th>
    <th>Needs</th>
    <th>Interests</th>
    <th>Site</th>
    <th>Santa</th>
  </tr>
</thead>
<tbody>
  <tr>
    <td><%= child.name%></a></td>
    <td><%= child.age %></td>
    <td><%= child.needs %></td>
    <td><%= child.interests %></td>
    <td><%= child.site %></td>
    <form action = "/children/<%=child.id%>?_method=put" method="POST">
    <td><input id="santaInput" type="text" name= "child[santa]" value= "<%=child.santa%>" placeholder= "Add Your Username/Email" class="form-control" autofocus></td>
  </tr>
</tbody>
</table>

<input type="submit" value="Submit" class="btn btn-lg btn-success">
<a href="/children" class="btn btn-lg btn-warning">Cancel</a>
</form>




<% include ../partials/footer %>
<br>

<form action="/logout">
    <input type="submit" value="Logout" class="btn btn-primary btn-xs">
</form>