<% include ../partials/header %>
<h1>Edit your site</h1>


<form action="/sites/<%= site.id %>?_method=PUT" method="POST">
  <div class="form-group">
    <label for="name">Address: </label>
    <input type="text" class="form-control" name="site[address]" id="address" value="<%=site.address%>"autofocus>
  </div>
  <div class="form-group">
    <label for="lat">Latitude: </label>
    <input type="text" class="form-control" name="site[lat]" id="lat" value="<%= site.lat %>">
    <label for="long">Longitude: </label>
    <input type="text" class="form-control" name="site[long]" id="long" value="<%=site.long %>">
  </div>
  <input type="submit" value="Add" class="btn btn-lg btn-success">
</form>


<form action="/sites/<%= site.id%>?_method=DELETE" method="POST">
    <input type="submit" value="X" class="btn btn-gold">
</form>
<% include ../partials/footer %>