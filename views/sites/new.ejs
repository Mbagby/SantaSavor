<% include ../partials/header %>
<h1>Add a new site</h1>
<a href="/sites">See all sites</a>

<form id="newsiteform" action="/sites" method="POST">
  <div class="form-group">
    <label for="name">Address: </label>
    <input type="text" class="form-control" name="site[address]" id="address" autofocus>
  </div>
  <div class="form-group">
    <label for="lat">Latitude: </label>
    <input type="text" class="form-control" name="site[lat]" id="lat">
    <label for="long">Longitude: </label>
    <input type="text" class="form-control" name="site[long]" id="long">
  </div>
  <input type="submit" value="Add" class="btn btn-lg btn-success">
</form>
<% include ../partials/footer %>
